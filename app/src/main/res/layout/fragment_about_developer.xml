<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.AboutDeveloperFragment">

        <include
            android:id="@+id/user_avatar"
            layout="@layout/user_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:cameraVisible="@{false}"
            bind:model="@{person}"
            bind:size="@{300}" />

        <include
            android:id="@+id/user_details"
            layout="@layout/user_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            bind:user="@{person}" />

        <include layout="@layout/text_separator_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:title="@{`Qualifications`}"
            android:id="@+id/qualification_text"
            app:layout_constraintTop_toBottomOf="@id/user_details"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/qualification_text"
            android:text="@string/dev_qualification"
            android:textAlignment="center"
            android:textColor="@color/app_color"
            android:id="@+id/qualifications"
            />
        <include layout="@layout/text_separator_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:title="@{`SOcial Media`}"
            android:id="@+id/social_media"
            app:layout_constraintTop_toBottomOf="@id/qualifications"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/follow_on_twitter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:text="@string/follow_me_on_twitter"
            android:drawablePadding="10dp"
            android:textColor="@color/app_color"
            android:drawableLeft="@drawable/ic_twitter_bird"
            app:layout_constraintTop_toBottomOf="@id/social_media"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>
        <variable
            name="person"
            type="com.petruskambala.namcovidcontacttracer.model.Person" />
    </data>
</layout>
