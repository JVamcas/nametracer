<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_casesFragment"
            app:destination="@id/casesFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.authentication.RegistrationFragment"
        android:label="Create New Account"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_extendedRegistrationFragment"
            app:destination="@id/extendedRegistrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.authentication.LoginFragment"
        android:label=""
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/casesFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.cases.RecordedCaseFragment"
        android:label="Recorded Cases"
        tools:layout="@layout/fragment_recorded_case" >
        <action
            android:id="@+id/action_casesFragment_to_newCaseFragment"
            app:destination="@id/newCaseFragment" />
        <action
            android:id="@+id/action_casesFragment_to_updateCaseFragment"
            app:destination="@id/updateCaseFragment" />
    </fragment>
    <fragment
        android:id="@+id/newCaseFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.cases.NewCaseFragment"
        android:label="Find Person"
        tools:layout="@layout/fragment_new_case" />
    <fragment
        android:id="@+id/updateCaseFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.cases.UpdateCaseFragment"
        android:label="Find Case" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.account.ProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_profile" />
    <action android:id="@+id/action_global_profileFragment" app:destination="@id/profileFragment" />
    <fragment
        android:id="@+id/extendedRegistrationFragment"
        android:name="com.petruskambala.namcovidcontacttracer.ui.authentication.ExtendedRegistrationFragment"
        android:label="Create New Account"
        tools:layout="@layout/fragment_extended_registration" /><action android:id="@+id/action_global_loginFragment" app:destination="@id/loginFragment"/>
</navigation>